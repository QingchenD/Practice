<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/launch_title"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:textColor="@android:color/holo_blue_bright"
        android:text="123"/>

    <Button
        android:id="@+id/launch_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Standard"/>

    <Button
        android:id="@+id/launch_single_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Single Top"/>

    <Button
        android:id="@+id/launch_single_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Single Task"/>

    <Button
        android:id="@+id/launch_single_instance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Single Instance"/>

    <Button
        android:id="@+id/launch_application_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Application start Activity"/>

</LinearLayout>